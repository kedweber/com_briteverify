<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0.0" method="upgrade" overwrite="true">
    <name>Brite Verify</name>
    <author>Joep van der Heijden</author>
    <creationDate>September 2014</creationDate>
    <copyright>Copyright (C) 2014 Moyo Web Architects and Contributors. (http://www.moyoweb.nl)</copyright>
    <license>http://www.gnu.org/licenses/gpl.html GNU/GPL v3</license>
    <authorEmail>joep.van.der.heijden@moyoweb.nl</authorEmail>
    <authorUrl>www.moyoweb.nl</authorUrl>
    <version>1.0.0</version>
    <description>Brite Verify</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">install/install.sql</file>
        </sql>
    </install>

    <administration>
        <files folder="administrator/components/com_briteverify">
            <file>dispatcher.php</file>
            <file>briteverify.php</file>

            <folder>controllers</folder>
            <folder>databases</folder>
            <folder>install</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>templates</folder>
            <folder>views</folder>
        </files>

        <languages folder="administrator/components/com_articles">
            <language tag="en-GB">language/en-GB/en-GB.com_briteverify.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_briteverify.sys.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_briteverify.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_briteverify.sys.ini</language>
        </languages>

        <menu>COM_BRITEVERIFY</menu>
    </administration>
</extension>